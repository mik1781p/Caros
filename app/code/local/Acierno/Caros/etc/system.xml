<?xml version="1.0" encoding="UTF-8" ?>
<config>
    <sections>
        <acierno_caros module="acierno_caros"  translate="label">
            <label>Acierno Caros</label>
            <tab>general</tab>
            <sort_order>100</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups translate="label">
                <general translate="label">
                    <label>General Configuration</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled  translate="label">
                            <label>Enabled</label>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <tooltip>Is this module enabled?</tooltip>
                        </enabled>
                        <size translate="label">
                            <label>Size type</label>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <frontend_type>select</frontend_type>
                            <source_model>acierno_caros/adminhtml_system_config_form_selectconfig</source_model>
                            <tooltip>What size do you want?</tooltip>
                        </size>
                        <library translate="label">
                            <label>Load your Js library</label>
                            <frontend_type>file</frontend_type>
                            <backend_model>acierno_caros/adminhtml_system_config_backend_file</backend_model>
                            <upload_dir config="system/filesystem/media" score_info="1">caros</upload_dir>
                            <base_url type="media" score_info="1">caros</base_url>
                            <tooltip>Load your personal js library to include with this caros</tooltip>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </library>
                    </fields>
                </general>
            </groups>
        </acierno_caros>
    </sections>
</config>